<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Symbol</th>
      <th>Sector</th>
      <th>Industry</th>
      <th>Stats</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.company_name %></td>
        <td><%= stock.symbol %></td>
        <td><%= stock.sector %></td>
        <td><%= stock.industry %></td>
        <td>
          <% stock.stats.each do |stat| %>
            Dividend yield:
            <%= stat.dividend_yield %>
          <% end %>
        </td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

